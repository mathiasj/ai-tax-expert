{
  "name": "ai-tax-expert",
  "version": "0.1.0",
  "description": "AI-powered Swedish tax advisory system using RAG over Swedish tax law",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "scrape": "bun run scripts/scrape-all.ts",
    "process": "bun run scripts/process-documents.ts",
    "worker": "bun run src/workers/document-processor.ts",
    "refresh-worker": "bun run src/workers/refresh-scheduler.ts",
    "scrape-worker": "bun run src/workers/scrape-scheduler.ts",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "test": "bun test",
    "check": "bun run lint && bun run test",
    "eval": "bun run src/core/evaluation/runner.ts",
    "frontend:dev": "cd frontend && bun run vite",
    "frontend:build": "cd frontend && bun run vite build",
    "frontend:preview": "cd frontend && bun run vite preview",
    "dev:all": "bun run dev & bun run frontend:dev",
    "build:all": "bun run frontend:build && bun build src/index.ts --outdir dist --target bun"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@langchain/textsplitters": "^0.1.0",
    "@mendable/firecrawl-js": "^4.12.0",
    "@qdrant/js-client-rest": "^1.12.0",
    "bullmq": "^5.25.0",
    "cheerio": "^1.0.0",
    "cohere-ai": "^7.14.0",
    "dotenv": "^16.4.0",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.0",
    "ioredis": "^5.4.0",
    "openai": "^4.70.0",
    "pdf-parse": "^1.1.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.49.0",
    "postgres": "^3.4.0",
    "uuid": "^11.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "^1.1.0",
    "@types/pdf-parse": "^1.1.4",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.28.0",
    "typescript": "^5.6.0"
  }
}
